<ListBoxItem x:Class="WpfApp1.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" BorderThickness="0,0,0,1" BorderBrush="LightGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="467*"/>
            <ColumnDefinition Width="26*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" x:Name="TaskLabel">Test</Label>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
            <Button x:Name="DeleteButton" Margin="2, 0, 2, 0">X</Button>
            <Button x:Name="EditButton" Margin="2, 0, 2, 0">E</Button>
        </StackPanel>
    </Grid>
</ListBoxItem>
